  <div class="projects col-6">Projects</div>
  <div class="info-2 col-6 right"><a href="#information">Information</a></div>
</div>
</div>

<ul class="client-list list-reset">
  <% @pages.each do | page | %>
  <li>
  <%= link_to page_path(page.slug) do %>
  <span class="title"><%= page.title %><% unless page == @pages.last %>,</span> <% end%>
  <% end %>
  </li>
  <% end %>
</ul>

<%= render 'about' %>

<script>
$('a[href*=\\#]').on('click', function(event){
    event.preventDefault();
    $('html,body').animate({scrollTop:$(this.hash).offset().top}, 500);
});
</script>
