
<div class="clearfix header">
  <div class="sm-col sm-col-8">
    <div id="logo">satomi</div>
  </div>
    <ul class="nav sm-col sm-col-4">
      <li id="button">Index /</li>
      <li id="images">Thumbnails /</li>
      <li id="contact-link"><a href="#contact">Contact</a></li>
    </ul>        
</div>

<div class="project-header">Projects â€”</div>

<% @pages.each do | page | %>
  <div class="index max-width-12 mx-auto">
    <div class="clearfix">
      <ul class="client-list list-reset">
        <li><%= link_to page.title, page.slug %></li>     
      </ul>
    </div>
  </div>
<% end %>

<div class="lg-col-12 mx-auto">
  <div class="grid">
    <% @pages.each do | page | %> 
      <div class="grid-item">
        <div class="project-num mb2 mt2"><%= page.projectNumber %></div>
          <img class="fit thumb mb2 ar-container"/>
            <% page.featuredImage.first.tap do |asset| %>
            <%= image_tag asset.file.url%>
            <% end %>
      <div class="client-title center"><%= page.title %></div>
      <div class="project-title center"><%= page.caption %></div>
      <div class="project-role center pb2"><%= page.role %></div>
      </div>
    <% end %> 
  </div>   
</div>

<%= render 'about' %>


<script>  

$('.grid').packery({
    itemSelector: '.grid-item',
    rowHeight: 0,
    gutter: 70,
    transitionDuration: 0,
  });

$(document).ready(function(){
    $("#button").click(function(){
      $(".index").toggle();
      $(".grid").hide();
      $(".index").show();
  });
});

$(document).ready(function(){
    $("#images").click(function(){
      $(".index").toggle();
      $(".index").hide();
      $(".grid").show();
  });
});

</script>

